<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sidebar_selection"
            android:layout_alignParentTop="true">
        <ImageView
                android:layout_width="@dimen/menu_imSideBarIcon_layout_width"
                android:layout_height="@dimen/menu_imSideBarIcon_layout_height"
                android:id="@+id/imSideBarIcon" android:layout_alignParentLeft="true" android:layout_marginLeft="@dimen/menu_imSideBarIcon_marginLeft"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/sidebar_colortext_mystation"
                android:id="@+id/tvSideBarItem" android:layout_alignParentLeft="true" android:layout_marginLeft="@dimen/menu_tvSideBarItem_marginLeft"
                android:layout_centerVertical="true" android:textSize="@dimen/menu_tvSideBarItem_textSize" android:textStyle="bold"/>
        <ImageView
                android:layout_width="@dimen/menu_imArrow_layout_width"
                android:layout_height="@dimen/menu_imArrow_layout_height"
                android:id="@+id/imArrow"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrows"
                android:layout_centerVertical="true" android:layout_marginRight="@dimen/menu_imArrow_marginRight"/>
    </RelativeLayout>
</RelativeLayout>