<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:isScrollContainer="true"
            android:scrollbars="vertical"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
        >

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            >


        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/navbar"
                        android:id="@+id/relativeLayout1">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ibProfileSave"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentTop="true"
                       android:background="@drawable/profile_btsave"
                       android:layout_centerVertical="true"
                       android:contentDescription="@string/description"
                       android:layout_marginRight="@dimen/profileSetup_navibar_menu_margin_right"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ibProfileCancel"
                       android:layout_alignParentLeft="true"
                       android:src="@drawable/profile_tb_cancel"
                       android:layout_centerVertical="true"
                       android:contentDescription="@string/description"
                       android:layout_marginLeft="@dimen/profileSetup_navibar_save_margin_left"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/profile_relativeLayout"
                android:layout_alignRight="@+id/rlMyStation"
                android:layout_below="@+id/relativeLayout1"
                android:background="@drawable/profile_cover"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_iv_icon"
                    android:background="@drawable/content_button_like"
                    android:src="@drawable/profile_icon"
                    android:contentDescription="@string/description"
                    android:layout_marginLeft="@dimen/profileSetup_profile_icon_margin_left"
                    android:layout_alignParentBottom="true"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/rlMyStation"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profile_relativeLayout">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Profile"
                    android:textColor="@color/profile_textcolor"
                    android:id="@+id/tvTitleFeed"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profileSetup_tvProfile"/>
            <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/display_name"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tvTitleFeed"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/profileSetup_rl_displayname_margin_left">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/displayName"
                        android:textColor="@color/profile_textcolor"
                        android:id="@+id/tv_profile_displayname"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/profileSetup_tvDisplayname_margin_left"
                        android:layout_centerVertical="true"/>
                <TextView
                        android:layout_width="@dimen/profileSetup_etDisplayname_width"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_display_name"
                        android:id="@+id/profile_et_displayname"
                        android:singleLine="true"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_profile_displayname"
                        android:layout_marginTop="@dimen/profileSetup_etDisplayname_marginTop"
                        android:layout_marginRight="@dimen/profileSetup_etDisplayname_marginRight"
                        android:padding="@dimen/profileSetup_etDisplayname_padding"
                        android:layout_marginLeft="@dimen/profileSetup_etDisplayname_marginLeft"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlMyStation"
                android:layout_alignLeft="@+id/profile_relativeLayout"
                android:id="@+id/relativeLayout2">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accInformation"
                    android:textColor="@color/profile_textcolor"
                    android:id="@+id/accInfo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profileSetup_tvInformationDisplay_marginLeft"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accInfo">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_below="@+id/accInfo"
                        android:background="@drawable/profile_account_infor"
                        android:layout_alignRight="@+id/accInfo"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="@dimen/profileSetup_imBackground_margin"
                        android:contentDescription="@string/contentDescription"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profileSetup_rlInformation_height"
                        android:layout_alignLeft="@+id/accInfo"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginRight="@dimen/profileSetup_rlInformation_marginRight"
                        android:id="@+id/relativeLayout4"
                        android:layout_marginLeft="@dimen/profileSetup_rlInformation_marginLeft">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fullName"
                            android:textColor="@color/profile_textcolor"
                            android:id="@+id/tv_profile_name"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/profileSetup_tvInformation_marginLeft"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/profileSetup_tvInformation_marginTop"/>
                    <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:hint="@string/hint_name"
                            android:background="@null"
                            android:id="@+id/profile_et_name"
                            android:layout_alignBottom="@+id/tv_profile_name"
                            android:layout_alignTop="@+id/tv_profile_name"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/profileSetup_etName_marginLeft"
                            android:layout_marginRight="@dimen/profileSetup_etName_marginRight"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="@dimen/profileSetup_rlPhoneHight"
                                android:id="@+id/relativeLayout3"
                                android:layout_alignLeft="@+id/relativeLayout4"
                                android:layout_below="@+id/relativeLayout4"
                                android:layout_marginRight="@dimen/profileSetup_rlPhone_marginRight">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/phone"
                              android:textColor="@color/profile_textcolor"
                              android:id="@+id/profile_tv_phone"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_tvPhone_marginLeft"
                              android:layout_alignParentTop="true"
                              android:layout_marginTop="@dimen/profileSetup_tvPhone_marginTop"/>
                    <EditText android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:hint="@string/hint_phone"
                              android:background="@null"
                              android:id="@+id/et_profile_phone"
                              android:inputType="number"
                              android:layout_alignBottom="@+id/profile_tv_phone"
                              android:layout_alignTop="@+id/profile_tv_phone"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_etPhone_marginLeft"
                              android:layout_marginRight="@dimen/profileSetup_etPhone_marginRight"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="@dimen/profileSetup_rlHeightBirthday"
                                android:id="@+id/relativeLayout5"
                                android:layout_alignLeft="@+id/relativeLayout4"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/profileSetup_rlBirthday_marginRight"
                                android:layout_below="@+id/relativeLayout3">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/birthday"
                              android:textColor="@color/profile_textcolor"
                              android:id="@+id/profile_tv_birthday"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_tvBirthday_marginLeft"
                              android:layout_alignParentTop="true"
                              android:layout_marginTop="@dimen/profileSetup_tvBirthday_marginTop"/>
                    <EditText android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:hint="@string/hint_birthday"
                              android:background="@null"
                              android:editable="false"
                              android:focusable="false"
                              android:id="@+id/profile_et_birthday"
                              android:layout_alignBottom="@+id/profile_tv_birthday"
                              android:layout_alignTop="@+id/profile_tv_birthday"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_etBirthday_marginLeft"
                              android:layout_marginRight="@dimen/profileSetup_etBirthday_marginRight"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="@dimen/profileSetup_rlHeightGender"
                                android:id="@+id/relativeLayout6"
                                android:layout_below="@+id/relativeLayout5"
                                android:layout_marginRight="@dimen/profileSetup_rlGender_marginRight"
                                android:layout_alignLeft="@+id/relativeLayout4">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/gender"
                              android:textColor="@color/profile_textcolor"
                              android:id="@+id/tv_profile_gender"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_tvGender_marginLeft"
                              android:layout_alignParentTop="true"
                              android:layout_marginTop="@dimen/profileSetup_tvGender_marginTop"/>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profile_relaytive_gender"
                            android:layout_alignBottom="@+id/tv_profile_gender"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/profileSetup_rlGenderButton_marginLeft"
                            android:layout_marginTop="@dimen/profileSetup_rlGenderButton_marginTop">
                        <ImageButton android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/profile_ibleft"
                                     android:src="@drawable/profile_btn_select_left"
                                     android:background="@null"
                                     android:contentDescription="@string/contentDescription"
                                />
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/profile_ibright"
                                android:src="@drawable/profile_btn_unselect_right"
                                android:background="@null"
                                android:layout_toRightOf="@+id/profile_ibleft"
                                android:layout_below="@+id/profile_relaytive_gender"
                                android:contentDescription="@string/contentDescription"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/relativeLayout7"
                                android:layout_alignLeft="@+id/relativeLayout4"
                                android:layout_below="@+id/relativeLayout6"
                                android:layout_marginRight="@dimen/profileSetup_rlCountry_marginRight"
                                android:layout_alignBottom="@+id/imageView2">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/country"
                              android:textColor="@color/profile_textcolor"
                              android:id="@+id/profile_tv_country"
                              android:layout_alignParentLeft="false"
                              android:layout_alignParentTop="false"
                              android:layout_marginLeft="@dimen/profileSetup_tvCountry_marginLeft"
                              android:layout_marginTop="@dimen/profileSetup_tvCountry_marginTop"/>
                    <EditText android:layout_width="@dimen/profileSetup_etWidthCountry"
                              android:layout_height="wrap_content"
                              android:text="@string/hint_yourCountry"
                              android:editable="false"
                              android:focusable="false"
                              android:background="@null"
                              android:id="@+id/profile_et_country"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="@dimen/profileSetup_etCountry_marginLeft"
                              android:layout_marginTop="@dimen/profileSetup_etCountry_marginTop"
                              android:layout_alignParentRight="true"
                              android:layout_marginRight="@dimen/profileSetup_etCountry_marginRight"
                              android:inputType=""/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_below="@+id/relativeLayout2">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/profile_textcolor"
                    android:id="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/profileSetup_tvDescription_marginLeft"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/hint_description"
                    android:id="@+id/profile_et_desciption"
                    android:background="@drawable/profile_setup_image_description"
                    android:lines="5"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/profileSetup_etDescription_marginLeft"
                    android:paddingLeft="@dimen/profileSetup_etDescription_paddingLeft"
                    android:layout_marginRight="@dimen/profileSetup_etDescription_marginRight"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentTop="false"
                    android:inputType="textMultiLine"
                    android:gravity="left|top"/>
        </RelativeLayout>


        <DatePicker
                android:id="@+id/dpResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />


    </RelativeLayout>
</ScrollView>